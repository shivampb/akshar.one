{
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "format": "custom",
  "json": {
    "Main": {
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Enter blog title"
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "blog-slug"
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select Category",
          "options": [
            "Market Trends",
            "Real Estate Guide",
            "Investment",
            "Lifestyle",
            "Company News"
          ]
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author",
          "placeholder": "e.g. Admin"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Banner Image",
          "constraint": {
            "width": 1200,
            "height": 630
          }
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Short Excerpt",
          "placeholder": "A short summary for the blog card"
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Write your blog post here...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "faqs": {
        "type": "Group",
        "config": {
          "label": "FAQs",
          "fields": {
            "question": {
              "type": "Text",
              "config": {
                "label": "Question",
                "placeholder": "e.g. What is the possession date?"
              }
            },
            "answer": {
              "type": "StructuredText",
              "config": {
                "label": "Answer",
                "placeholder": "Answer with formatting...",
                "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
              }
            }
          }
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO Title"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Brief summary for search engines"
        }
      },
      "keywords": {
        "type": "Text",
        "config": {
          "label": "Keywords",
          "placeholder": "Comma separated keywords"
        }
      }
    }
  }
}
