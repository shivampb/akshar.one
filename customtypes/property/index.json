{
  "id": "property",
  "label": "Property",
  "repeatable": true,
  "status": true,
  "format": "custom",
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "property-slug"
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Property Name",
          "placeholder": "e.g. Akshar Oceanis"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select Category",
          "options": ["Residential", "Commercial", "Industrial", "Agricultural"]
        }
      },
      "type": {
        "type": "Select",
        "config": {
          "label": "Property Type",
          "placeholder": "Select Type",
          "options": [
            "Apartment",
            "Villa",
            "Plot",
            "Office",
            "Shop",
            "Warehouse",
            "Farmhouse"
          ]
        }
      },
      "status": {
        "type": "Select",
        "config": {
          "label": "Status",
          "placeholder": "Select Status",
          "options": [
            "For Sale",
            "For Rent",
            "Under Construction",
            "Ready to Move"
          ]
        }
      },
      "price": {
        "type": "Number",
        "config": {
          "label": "Price",
          "placeholder": "Numerical value"
        }
      },
      "price_on_request": {
        "type": "Boolean",
        "config": {
          "label": "Price on Request",
          "default_value": false
        }
      },
      "main_image": {
        "type": "Image",
        "config": {
          "label": "Main Featured Image",
          "constraint": {
            "width": 1200,
            "height": 800
          }
        }
      },
      "short_description": {
        "type": "Text",
        "config": {
          "label": "Short Description",
          "placeholder": "Brief summary for the card view"
        }
      },
      "full_description": {
        "type": "StructuredText",
        "config": {
          "label": "Full Description",
          "placeholder": "Detailed description of the property",
          "allowTargetBlank": true,
          "multi": "paragraph,heading2,heading3,strong,em,hyperlink,list-item,preformatted,image,embed,heading1,o-list-item,rtl,heading4,heading5,heading6"
        }
      },
      "is_featured": {
        "type": "Boolean",
        "config": {
          "label": "Show on Home Page",
          "default_value": false
        }
      },
      "gallery": {
        "type": "Group",
        "config": {
          "label": "Image Gallery (Add many photos here)",
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Photo"
              }
            }
          }
        }
      }
    },
    "Details": {
      "location": {
        "type": "Text",
        "config": {
          "label": "Location Name",
          "placeholder": "e.g. Science City, Ahmedabad"
        }
      },
      "address": {
        "type": "Text",
        "config": {
          "label": "Full Address",
          "placeholder": ""
        }
      },
      "configuration": {
        "type": "Text",
        "config": {
          "label": "Configuration",
          "placeholder": "e.g. 3 BHK, 4 BHK"
        }
      },
      "area": {
        "type": "Text",
        "config": {
          "label": "Area (Sq.Ft)",
          "placeholder": "e.g. 1185 - 1193 "
        }
      },
      "project_area": {
        "type": "Text",
        "config": {
          "label": "Project Area",
          "placeholder": "e.g. 0.67 Acres"
        }
      },
      "rera_id": {
        "type": "StructuredText",
        "config": {
          "label": "Rera Id",
          "placeholder": "e.g. PR/GJ/AHMEDABAD/AHM",
          "allowTargetBlank": true,
          "single": "heading5,strong,em,hyperlink,paragraph,heading6"
        }
      },
      "launch_date": {
        "type": "Text",
        "config": {
          "label": "Launch Date",
          "placeholder": "e.g. Dec, 2022"
        }
      },
      "project_size": {
        "type": "Text",
        "config": {
          "label": "Project Size",
          "placeholder": "e.g. 2 Buildings - 104 units"
        }
      },
      "possession_status": {
        "type": "Text",
        "config": {
          "label": "Possession Status",
          "placeholder": "e.g. Ready to Move"
        }
      },
      "possession_date": {
        "type": "Text",
        "config": {
          "label": "Possession Date",
          "placeholder": "e.g. Dec, 2027"
        }
      },
      "amenities": {
        "type": "Group",
        "config": {
          "label": "Amenities",
          "fields": {
            "name": {
              "type": "Text",
              "config": {
                "label": "Amenity Name",
                "placeholder": "e.g. Swimming Pool"
              }
            }
          }
        }
      },
      "map_url": {
        "type": "Text",
        "config": {
          "label": "Google Map Embed Link",
          "placeholder": "Paste the Google Maps iframe src URL or share link here"
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO Title"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Brief summary for search engines"
        }
      },
      "keywords": {
        "type": "Text",
        "config": {
          "label": "Keywords",
          "placeholder": "Comma separated keywords"
        }
      }
    }
  }
}
